         <div class=""style="padding:0 5%;">
        
          <div class="row align-items-center  justify-content-space-around">
              <!-- start logo area -->
              <div class="col-md-2">
                 <div id="logo">
                  <a href="{{ home }}">
                  <img src="{{ logo }}" title="{{ name }}" alt="{{ name }}" class="img-responsive logo-home" style="width:80px;" />
                  </a>
                </div>
              </div>
              <!-- start logo area -->
              <div class="col-md-6">
                  <div class="main-menu-area">
                  <div class="main-menu">
                   {{ menu }}  
                  </div>
                </div>
              </div>
             <div class="col-md-3">
             <div class="header-right d-flex align-items-center justify-content-end w-100">
